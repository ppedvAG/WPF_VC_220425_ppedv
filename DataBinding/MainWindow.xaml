<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="348" Width="258">
    <StackPanel>

        <StackPanel x:Name="Spl_DataContextBsp" Margin="10">
            <StackPanel.DataContext>
                <local:Person Vorname="Anna" Nachname="Nass" Alter="35"/>
            </StackPanel.DataContext>

            <TextBox Text="{Binding Vorname}"/>
            <TextBlock Text="{Binding Nachname}"/>
            <TextBlock Text="{Binding Alter}"/>
            <TextBlock Text="{Binding WichtigeTage[0].Year}"/>

            <Button x:Name="Btn_Show" Content="Show" Click="Btn_Show_Click"/>
            <Button x:Name="Btn_Altern" Content="Altern" Click="Btn_Altern_Click"/>
        </StackPanel>

        <ListView Height="100"
                  ItemsSource="{Binding Personenliste}"
                  x:Name="Lbx_Personen"/>
        <Button Content="Neu" Click="Button_Click"/>
        <Button Content="Löschen" Click="Button_Click_1"/>


    </StackPanel>
</Window>
